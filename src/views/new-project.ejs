<!doctype html>
<html lang="pl">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Rejestr projektów - nowy projekt</title>
  <link rel="stylesheet" href="/styles.css"/>
</head>
<body>
  <div class="topbar">
    <div class="topbar-left">
      <strong>Nowy projekt</strong>
      <span class="muted">| <%= user.firstName %> <%= user.lastName %> | nr handlowca: <%= user.salesNumber %></span>
    </div>
    <div class="topbar-right">
      <a class="linkbtn" href="/projects">Powrót</a>
      <form method="POST" action="/logout" style="display:inline;">
        <button class="linkbtn" type="submit">Wyloguj</button>
      </form>
    </div>
  </div>

  <div class="container">
    <% if (err) { %><div class="alert alert-err"><%= err %></div><% } %>

    <div class="card">
      <form method="POST" action="/projects/new">
        <label>Nr projektu</label>
        <input name="projectNo" value="<%= projectNo %>" readonly />

        <label>Klient</label>
        <input name="clientName" required />

        <div class="grid2">
          <div>
            <label>Oddział (miasto)</label>
            <input name="branchCity" required />
          </div>
          <div>
            <label>Województwo</label>
            <input name="voivodeship" required />
          </div>
        </div>

        <label>Klient docelowy</label>
        <input name="endCustomer" required />

        <label>Produkt</label>
        <select name="product" required>
          <option value="">-- wybierz --</option>
          <% PRODUCTS.forEach(pr => { %>
            <option value="<%= pr %>"><%= pr %></option>
          <% }) %>
        </select>

        <label>Szczegóły</label>
        <textarea name="details" required></textarea>

        <label>Osoba wykonująca kalkulacje (opcjonalnie)</label>
        <input name="calculatorPerson" />

        <div class="grid2">
          <div>
            <label>Obrót</label>
            <input name="turnover" required placeholder="np. 12345.67" />
          </div>
          <div>
            <label>Miesiąc oferty</label>
            <input name="offerMonth" required placeholder="np. 2026-01" />
          </div>
        </div>

        <label>Status projektu</label>
        <select name="status" required>
          <option value="">-- wybierz --</option>
          <% STATUS.forEach(s => { %>
            <option value="<%= s.id %>"><%= s.id %>. <%= s.name %></option>
          <% }) %>
        </select>

        <button class="btn" type="submit">Zapisz ofertę</button>
      </form>
    </div>
  </div>
</body>
</html>
